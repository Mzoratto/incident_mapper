{
  "name": "incidentmapper-monorepo",
  "private": true,
  "description": "Local-first Incident Mapper mono-repo (web + api + packages + infra)",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.17",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "pnpm -r build --if-present",
    "lint": "pnpm -r lint --if-present",
    "dev:api": "pnpm --filter @incident/api dev",
    "dev:web": "pnpm --filter @incident/web dev",
    "demo:seed": "node scripts/seed-demo.mjs",
    "demo:smoke": "node scripts/smoke.mjs",
    "db:up": "docker compose -f infra/docker/compose.yml up -d",
    "db:down": "docker compose -f infra/docker/compose.yml down",
    "migrate": "pnpm --filter @incident/api prisma:migrate",
    "seed": "pnpm --filter @incident/api seed"
  }
}
